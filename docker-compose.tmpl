version: "3.7"

services:
  server:
    image: ndy40/production:nginx-CURRENT_TAG
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - php
    networks:
      - httpd
  php:
    image: ndy40/production:php-CURRENT_TAG
    restart: on-failure
    networks:
      - httpd
      - dbnetwork
volumes:
  db-data:
  dev-certs:
networks:
  httpd:
  dbnetwork:




